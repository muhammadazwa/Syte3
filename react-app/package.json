        "@testing-library/react": "^11.2.2",
        "@testing-library/user-event": "^12.6.0",
        "@types/enzyme": "^3.10.8",
        "@types/google-map-react": "^2.1.0",
        "@types/jest": "^26.0.19",
        "@types/node": "^14.14.14",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "jest-fetch-mock": "^3.0.3",
        "react-scripts": "4.0.1"
    },
    "dependencies": {
        "date-fns": "^2.4.1",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.15.1",
        "google-map-react": "^1.1.5",
        "husky": "^3.0.8",
        "lint-staged": "^9.4.2",
        "prettier": "^1.18.2",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-image": "^2.4.0",
